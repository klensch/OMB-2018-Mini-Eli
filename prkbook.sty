\usepackage[subpreambles=false]{standalone}
% --------------------------------------------------------------------
% \mainfolder est utiliser pour indiquer où sont les fichiers .sty
\ifdefined\mainfolder\relax\else
  \ifstandalone
    \newcommand*{\mainfolder}{}%../
  \else
    \newcommand*{\mainfolder}{}
  \fi
\fi
%\ifstandalone
